<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    FUNCTION BUTTON -->
    <style name="FunctionalButtons">
        <item name="android:textSize">40dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorFuncBtnTxt</item>
        <item name="android:background">@drawable/func_round_rectangle_btn</item>
    </style>


<!-- NUMBER BUTTON -->
    <style name="NumberButtons">
        <item name="android:textSize">40dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumberBtnTxt</item>
        <item name="android:background">@drawable/num_round_rectangle_btn</item>
    </style>


<!--   EQUAL BUTTON -->
    <style name="EqualButtons">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorEqualBtnTxt</item>
        <item name="android:background">@drawable/equal_round_rectangle_btn</item>
    </style>
</resources>
